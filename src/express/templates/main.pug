extends layout.pug

block content
  main.page-content
    include fragments/categories
    section.tickets-list
      h2.visually-hidden Самые новые предложения
      .tickets-list__wrapper
        .tickets-list__header
          p.tickets-list__title Самое свежее
        ul
          each offer in proposals
            li.tickets-list__item
              .ticket-card.ticket-card--color01
                .ticket-card__img
                  img(src=`/img/${offer.picture}` alt=offer.title)
                .ticket-card__info
                  span.ticket-card__label #{offer.type === `offer` ? `Куплю` : `Продам`}
                  .ticket-card__categories
                    a(href="#") #{offer.category}
                  .ticket-card__header
                    h3.ticket-card__title
                      a(href="#") #{offer.title}
                    p.ticket-card__price
                      span.js-sum #{offer.sum}
                      |  ₽
                  .ticket-card__desc
                    p #{offer.description}
    section.tickets-list
      h2.visually-hidden Самые обсуждаемые предложения
      .tickets-list__wrapper
        .tickets-list__header
          p.tickets-list__title Самые обсуждаемые
        ul
          each offer in proposals
            li.tickets-list__item
              .ticket-card.ticket-card--color01
                .ticket-card__img
                  img(src=`/img/${offer.picture}` alt=offer.title)
                .ticket-card__info
                  span.ticket-card__label #{offer.type === `offer` ? `Куплю` : `Продам`}
                  .ticket-card__categories
                    a(href="#") #{offer.category}
                  .ticket-card__header
                    h3.ticket-card__title
                      a(href="#") #{offer.title}
                    p.ticket-card__price
                      span.js-sum #{offer.sum}
                      |  ₽
                  .ticket-card__desc
                    p #{offer.description}
