extends layout.pug

block content
  main.page-content
    section.tickets-list
      h2.visually-hidden Самые новые предложения
      .tickets-list__wrapper
        .tickets-list__header
          a.tickets-list__btn.btn.btn--big(href='#')
            span Новая публикация
        ul
          each proposal in proposals
            li.tickets-list__item.js-card
              .ticket-card.ticket-card--color06
                .ticket-card__img
                  img(src=`/img/${proposal.picture}` srcset=`/img/${proposal.picture} 2x` alt=proposal.title)
                .ticket-card__info
                  span.ticket-card__label #{proposal.type === `offer` ? `Куплю` : `Продам`}
                  .ticket-card__categories
                    each category in proposal.categories
                      a(href="#") #{category.name}
                  .ticket-card__header
                    h3.ticket-card__title
                      a(href='#') #{proposal.title}
                    p.ticket-card__price
                      span.js-sum #{proposal.sum.toLocaleString()}
                      |  ₽
                button.ticket-card__del.js-delete(type='button') Удалить
